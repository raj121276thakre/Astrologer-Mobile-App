<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:padding="16dp">

    <!-- Illustration -->
    <ImageView
        android:id="@+id/ivSlideImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/city_skyline" />

    <TextView
        android:id="@+id/tvSlideTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 1"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_marginTop="12dp"
        android:id="@+id/etSlideInput1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/rounded_edit_text"
        android:hint="Enter answer" />

    <TextView
        android:id="@+id/tvSlideTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Question 2"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/etSlideInput2"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit_text"
        android:padding="12dp"
        android:hint="Enter answer" />

    <!-- Continue Button -->
    <Button
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/ic_arrow_right_24"
        android:drawableTint="@color/black"
        android:backgroundTint="@color/green"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"/>

</LinearLayout>
