<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/inner_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#66000000" /> <!-- Semi-transparent black for shadow -->
        </shape>
    </item>

    <!-- Inset Layer to simulate the inner shadow -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Transparent center -->
        </shape>
    </item>
</layer-list>
